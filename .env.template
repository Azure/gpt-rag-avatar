AZURE_KEY_VAULT_NAME="your-key-vault-name-here"

# -------------------------------
# MSAL Authentication configuration for the Avatar project
# -------------------------------
# Set to "true" to enable authentication
ENABLE_AUTHENTICATION="false"
CLIENT_ID="your_client_id_here"
AUTHORITY="https://login.microsoftonline.com/your_tenant_id"
# Must match your Azure AD app registration redirect path
REDIRECT_PATH="/getAToken"
# Update for your deployment environment
REDIRECT_URI="http://localhost:8000/getAToken"
# Comma-separated list of additional scopes ex: "optional_scope1,optional_scope2"
OTHER_AUTH_SCOPES="" 

# Secret names to fetch from Key Vault
APP_SERVICE_CLIENT_SECRET_NAME="appServiceClientSecretKey"

# -------------------------------
# Azure Speech API configuration
# -------------------------------
AZURE_SPEECH_REGION="your-azure-speech-region-here"  # e.g., westus2, westeurope
SUPPORTED_LANGUAGES="en-US,es-ES,pt-BR"
# Examples: en-US,pt-BR,es-ES,fr-FR,it-IT,de-DE,zh-CN,nl-NL,ja-JP,ko-KR,ru-RU,ar-SA,es-MX,fr-CA,pt-PT,hi-IN,tr-TR,pl-PL,sv-SE,th-TH,el-GR,cs-CZ

# -------------------------------
# Orchestrator configuration
# -------------------------------
STREAMING_ENDPOINT="https://your-orchestrator-url/orcstream"

